---
import {type CollectionEntry} from 'astro:content';
import TagShowcase from "./TagShowcase.astro";

interface Props {
    entry: CollectionEntry<'blog'>
}

const {entry} = Astro.props
---

<a class="p-10 rounded-2xl flex flex-col gap-2 duration-200 shadow hover:shadow-xl dark:shadow-blue-500 dark:hover:shadow-blue-300"
   href={`/blog/${entry.slug}`}>
    <h1 class="font-bold text-xl">{entry.data.title}</h1>
    <div class="flex flex-row gap-1 text-gray-500">
        <div>{entry.data.pubDate.toDateString()}</div>
        {
            entry.data.updatedDate != undefined ?
                    <div>=></div>
                    <div>{entry.data.updatedDate.toDateString()}</div> : null
        }
    </div>
    <div class="text-gray-500">{entry.data.description}</div>
    <TagShowcase tags={entry.data.tags}/>
</a>
