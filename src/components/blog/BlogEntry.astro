---
import {type CollectionEntry} from 'astro:content';
import TagShowcase from "./TagShowcase.astro";

interface Props {
    entry: CollectionEntry<'blog'>
}

const {entry} = Astro.props
---

<a class="card flex flex-col gap-2" href={`/blog/${entry.slug}`}>
    <div class="flex flex-wrap gap-5 justify-between">
        <div class="flex flex-col gap-2">
            <h1 class="font-bold text-xl">{entry.data.title}</h1>
            <div class="text-gray-500 dark:text-gray-400">{entry.data.description}</div>
            <div class="flex flex-wrap gap-1 text-gray-500 dark:text-gray-400">
                <div>{entry.data.pubDate.toDateString()}</div>
                {
                    entry.data.updatedDate &&
                        <div>=></div>
                        <div>{entry.data.updatedDate.toDateString()}</div>
                }
            </div>
            <TagShowcase tags={entry.data.tags}/>
        </div>
        <div class="max-h-32 max-w-48">
            {
                entry.data.sideImage &&
                    <img class="rounded-xl object-contain" src={entry.data.sideImage} alt=""/>
            }
        </div>
    </div>
</a>
